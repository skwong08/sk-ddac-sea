@model ddac.Models.ViewModels.ConfirmationVM

@{
    ViewBag.Title = "Confirmation";
}

<h2>Confirmation</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table class="table">
            <tr>
                <td>Type</td>
                <td>
                    @Html.HiddenFor(x => x.Type)
                    @Html.DisplayFor(x => x.Type)
                </td>                
            </tr>
            <tr>
                <td>Price</td>
                <td>
                    @Html.HiddenFor(x => x.Price)
                    @Html.DisplayFor(x => x.Price)
                </td>                
            </tr>
            <tr>
                <td>Departure Location</td>
                <td>
                    @Html.HiddenFor(x => x.DepartureLocation)
                    @Html.DisplayFor(x => x.DepartureLocation)
                </td>                
            </tr>
            <tr>
                <td>Arrival Location</td>
                <td>
                    @Html.HiddenFor(x => x.ArrivalLocation)
                    @Html.DisplayFor(x => x.ArrivalLocation)
                </td>                
            </tr>
            <tr>
                <td>Start Date</td>
                <td>
                    @Html.HiddenFor(x => x.StartDate)
                    @Html.DisplayFor(x => x.StartDate, "{0:dd/MM/yyyy}")
                </td>                
            </tr>
            <tr>
                <td>Day Duration</td>
                <td>
                    @Html.HiddenFor(x => x.DayDuration)
                    @Html.DisplayFor(x => x.DayDuration)
                </td>                
            </tr>
            <tr>
                <td><text>Full Name</text></td>
                <td>
                    @Html.EditorFor(x => x.FullName, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr>
                <td><text>Email</text></td>
                <td>
                    @Html.HiddenFor(x => x.Email)
                    @Html.DisplayFor(x => x.Email)
                </td>
            </tr>
            <tr>
                <td><text>Contact</text></td>
                <td>
                    @Html.EditorFor(x => x.Contact, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
        </table>
        @Html.HiddenFor(x => x.shipName)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmation" class="btn btn-default" />
            </div>
        </div>


    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}