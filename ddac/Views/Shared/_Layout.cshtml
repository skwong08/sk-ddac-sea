<body background="~/images/beach.jpg" alt="beach">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PRINCESS CRUISE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.Identity.Name == "admin@admin.com")
      
                        {
                        <li>@Html.ActionLink("location", "Index", "location")</li>
                        <li>@Html.ActionLink("country", "Index", "country")</li>
                        <li>@Html.ActionLink("ship", "Index", "ship")</li>
                        <li>@Html.ActionLink("cruise", "Index", "cruise")</li>
                        <li>@Html.ActionLink("Trip", "Index", "Trip")</li>
                    }
                    @if (User.Identity.IsAuthenticated && User.Identity.Name != "admin@admin.com")
                    {
                        <li>@Html.ActionLink("Ticket", "Index", "Ticket")</li>
                        <li>@Html.ActionLink("Cart", "Index", "Cart")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Carnival Corporation</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
